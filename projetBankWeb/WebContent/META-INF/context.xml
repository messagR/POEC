<?xml version="1.0" encoding="UTF-8"?>
<Context path="/projetBankWeb" reloadable="false">
	<WatchedRessource>WEB-INF/web.xml</WatchedRessource>
	
	<!-- Configuration de la data source
	Ne pas oublier de declarer le lien entre cette data source et l'application dans le fichier war -->
	
	
	<Resource name="jdbc/dataSourceProjetBankWeb"
		auth="Container"
		type="javax.sql.DataSource"
	 	initialSize="60"
        maxActive="50"
        minIdle="5"
        maxIdle="10"
        maxWait="30000"
        validationQuery="select 1"

        driverClassName="com.mysql.jdbc.Driver"
        username="root"
        password="root"
        url="jdbc:mysql://localhost:3306/banque"
	/>
</Context>